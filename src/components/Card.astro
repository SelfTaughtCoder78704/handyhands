---
import Button from './Button.astro';
interface Props {
  icon: string;
  title: string;
  text: string;
  link: string;
  btnText: string;
}

const { icon, title, text, link, btnText} = Astro.props;
---

<div   class="card">
  <div class="card-icon">
    <img src={icon} alt={title} />
    <h3>{title}</h3>
    <p>{text}</p>
    <Button 
      classes='primary' 
      elementKind='link' 
      text={ btnText }
      href={link}
    />
  </div>
</div>

<style>
  .card {
		background: var(--secondary);
		border: 1px solid var(--primary);
		border-radius: 10px;
		width: 100%;
		max-width: 320px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 20px;
		text-align: center;
		text-decoration: none;
		transition: 0.3s ease-in-out;
		color: var(--black);
	}

	.card:hover {
		background:  var(--tertiary);
		transform: scale(1.1);
		box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
	}

</style>

<style is:global>
  .card .primary {
    margin: 0 auto;
  }
</style>

